<!--pages/bingding/index.wxml-->
<i-panel title="基础用法">
  <i-input value="{{ nikeName }}"  autofocus type="text" title="真实姓名" placeholder="请输入真实姓名" bindchange='nikeNameInput'/>
  <i-input value="{{ mobile }}" type="number" title="联系电话" placeholder="请输入手机号" bindchange='mobileInput'/>
</i-panel>
<view class='submitView'>
  <i-button bind:click="submit" type="success">{{buttonText}}</i-button>
</view>