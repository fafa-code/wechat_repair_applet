<!--pages/studentBinding/index.wxml-->
<!-- <view class="title">选择认证身份</view> -->
<view class="bangdingForm">
  <view class="bangdingTab">
    <view class="changeTab leftPosition {{studentPosition}}" bindtap='changeStudent'>家长</view>
    <view class="changeTab rightPosition {{teacherPosition}}" bindtap='changeTeacher'>教师</view>
  </view>
  <view class="bangdingBox">


    <view wx:if="{{studentView}}">
      <view class="headerBox">
        <view class="leftHeader">
          <view class='userinfo-avatar'>
            <open-data type="userAvatarUrl"></open-data>
          </view>
          <view id="wxname">
            <open-data class='userinfo-nickname' type="userNickName"></open-data>
          </view>
        </view>
        <view class="linkImg">
          <image src="http://wx.schsafe.com/addons/fm_jiaoyu/public/mobile/img/ico_linkImg.png" />

        </view>
        <view class="rightHeader">
          <image alt="" src="../images/ava_importman.png" />
          <view>我的孩子</view>
        </view>
      </view>
      <i-divider content="" color="#ff9900" lineColor="#ff9900"></i-divider>
      <i-input value="{{ studentName }}" type="text" left title="学生姓名：" placeholder="学生真实姓名" bindchange='studentNameInput'/>
      <i-input value="{{ studentNumber }}" type="number" left title="学生学号：" placeholder="学生学号" bindchange='studentNumberInput'/>
      <i-input value="{{ studentPassword }}" type="password" left title="学生密码：" placeholder="学生密码" bindchange='studentPasswordInput'/>
      <i-divider content="" color="#ff9900" lineColor="#ff9900"></i-divider>
      
 <i-input value="{{ relationship }}" bindchange='relationshipInputChange' type="text" left title="亲属关系：" placeholder="亲属关系" />
      <i-input value="{{ parentName }}" bindchange='parentNameInput' type="text" left title="家长姓名：" placeholder="家长真实姓名" />
      <i-input value="{{ mobile }}" bindchange='mobileInput' type="number" left title="联系电话：" placeholder="手机号" />
          <i-button bind:click="studentHandleClick" type="success">完成认证</i-button>

      
    </view>
    <view wx:if="{{teacherView}}">
      <view class="headerBox">
        <view class="leftHeader">
          <view class='userinfo-avatar'>
            <open-data type="userAvatarUrl"></open-data>
          </view>
          <view id="wxname">
            <open-data class='userinfo-nickname' type="userNickName"></open-data>
          </view>
        </view>
        <view class="linkImg">
          <image src="http://wx.schsafe.com/addons/fm_jiaoyu/public/mobile/img/ico_linkImg.png" />

        </view>
        <view class="rightHeader">
          <image alt="" src="../images/ava_depart.png" />
          <view>我的学校</view>
        </view>
      </view>
      <i-divider content="" color="#ff9900" lineColor="#ff9900"></i-divider>
      <i-input value="{{teacherName}}" type="text" left title="教师姓名：" placeholder="教师真实姓名" bindchange='teacherNameInput' />
      <i-input value="{{teacherNumber}}" type="number" left title="教师工号：" placeholder="教师工号" bindchange='teacherNumberInput' />
      <i-input value="{{teacherPassword}}" type="password" left title="教师密码：" placeholder="教师密码" bindchange='teacherPasswordInput' />
          <i-button bind:click="teacherHandleClick" type="success">完成认证</i-button>
    </view>

  </view>
</view>
<i-toast id="toast" />